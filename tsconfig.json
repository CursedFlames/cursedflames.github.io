{
	"target": "ES6",
	"compilerOptions": {
		"outDir": "./build",
		"baseUrl": "./src",
		"rootDir": "./src",
		"paths": {
			"*": [
				"./*"
			]
		},
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"alwaysStrict": true,
		"downlevelIteration": true,
		"lib": [
			"ES6", "ES2015", "DOM"
		]
	},
	"include": [
		"src/**/*"
	]
}